<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.archstudio.myxgen.brick">
      <brick
            class="org.archstudio.schematron.core.SchematronMyxComponent"
            id="org.archstudio.schematron.core.SchematronMyxComponent"
            name="Schematron Impl">
         <interface
               class="org.archstudio.archlight.IArchlightTool"
               delegate="brick"
               direction="in"
               getter="true"
               id="tool"
               name="tool"
               single="true">
         </interface>
         <interface
               class="org.archstudio.noticeadt.IArchlightNoticeADT"
               delegate="variable"
               direction="out"
               getter="true"
               id="notices"
               name="notices"
               single="true">
         </interface>
         <interface
               class="org.archstudio.testadt.IArchlightTestADT"
               delegate="variable"
               direction="out"
               getter="true"
               id="tests"
               name="tests"
               single="true">
         </interface>
         <interface
               class="org.archstudio.issueadt.IArchlightIssueADT"
               delegate="variable"
               direction="out"
               getter="true"
               id="issues"
               name="issues"
               single="true">
         </interface>
         <interface
               class="org.archstudio.xarchadt.IXArchADT"
               delegate="variable"
               direction="out"
               getter="true"
               id="xarch"
               name="xarch"
               single="true">
         </interface>
         <interface
               class="org.eclipse.jface.preference.IPreferenceStore"
               delegate="variable"
               direction="out"
               getter="true"
               id="preferences"
               name="preferences"
               single="true">
         </interface>
      </brick>
      <brick
            class="org.archstudio.schematron.core.prefs.SchematronPrefsMyxComponent"
            id="org.archstudio.schematron.core.prefs.SchematronPrefsMyxComponent"
            name="Schematron Prefs Impl">
         <interface
               class="org.eclipse.jface.preference.IPreferenceStore"
               delegate="variable"
               direction="out"
               getter="true"
               id="preferences"
               name="preferences"
               single="true">
         </interface>
      </brick>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.archstudio.archlight.core.prefs.ArchlightPreferencePanel"
            class="org.archstudio.schematron.core.prefs.SchematronPreferencePanel"
            id="org.archstudio.schematron.core.prefs.SchematronPreferencePanel"
            name="Schematron">
      </page>
   </extension>

</plugin>
